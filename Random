-- Save the original loadstring
local originalLoadstring = loadstring

-- Hook loadstring to check the source
function loadstring(source)
    if source:find("ZaRdoOx/Fazium-files/main/Random") then
        print("Script is being executed from the authorized loader.")
        _G.LoaderValidated = true
    end

    -- Call the original loadstring
    return originalLoadstring(source)
end

-- Validate execution
if not _G.LoaderValidated then
    warn("Script not executed via the authorized loader. Exiting.")
    return
end

-- Your main script logic
print("Script successfully validated.")
